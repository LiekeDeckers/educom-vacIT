{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block header %}
<div class="row">
    <div class="col-md-10">
    </div>
    <div class="col-md-1 mb-2 bebas">
        <a style="text-decoration: none" href="/register">
            <h3 style="color: white">Registreren</h3>
        </a>
    </div>
    <div class="col-md-1 mb-2 bebas">
        <a style="text-decoration: none" href="/login">
            <h3 style="color: white">Inloggen</h3>
        </a>
    </div>
</div>
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
		<div class="col-md-2 mt-3">
            <div class="hex">
                <div class="hex-background">
                    <img src="">
                </div>
            </div>
		</div>

		<div class="col-md-10 mt-3">
			<div class="row">
				<div class="col-md-12 bebas">
                    <h1 style="font-size: 48px; color: var(--orange)">Login</h1>
				</div>
			</div>

            <form action="{{ path('app_login') }}" method="post">
			<div class="row mt-3">
				
                <div class="col-md-12">
                    <div class="bebas" style="font-size: 16px"><label for="username">Username:</label></div>
                    <input type="text" id="username" name="_username" style="border: none; border-bottom: solid 1px var(--orange); font-size: 25px; width: 20%" value="{{ last_username }}"/>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="bebas" style="font-size: 16px"><label for="password">Password:</label><div>
                    <input type="password" id="password" name="_password" style="border: none; border-bottom: solid 1px var(--orange); font-size: 25px; width: 20%"/>
                </div>
                <div class="col-md-12 mb-5">
                    <div class="row">
                        <div class="col-md-2 mt-2">
                            <a style="text-decoration: none; color: var(--orange)" href="">Wachtwoord vergeten</a>
                        </div>
                        <div class="col-md-10 mt-3">
                            <button type="submit" style="border: none; background: none; color: var(--orange)" >
                                <i class="fas fa-arrow-right fa-3x"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            </form>

        </div>
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        
    
    </div>
{% endblock %}
