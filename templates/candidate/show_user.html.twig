{% extends 'base.html.twig' %}

{% block title %}Hello {{ user.voornaam }}!{% endblock %}

{% block body %}

    <h1>Profiel {{ user.voornaam }}</h1>
    
    <form action="{{ path('save_user') }}" method="POST">
        <label for="user_id"></label>
        <input type="hidden" name="user_id" value='{{ user.id }}'><br>

        <label for="username"></label>
        <input type="hidden" name="username" value='{{ user.username }}'><br>

        <label for="password"></label>
        <input type="hidden" name="password" value='{{ user.password }}'><br>

        <label for="voornaam">Voornaam:</label>
        <input type="text" name="voornaam" value='{{ user.voornaam | default(null) }}'><br>

        <label for="achternaam">Achternaam:</label>
        <input type="text" name="achternaam"  value='{{ user.achternaam | default(null) }}'><br>

        <label for="geboortedatum">Geboortedatum:</label>
        <input type="date" name="geboortedatum"><br>

        <label for="plaats">Telefoonnummer:</label>
        <input type="text" name="telefoonnummer" value='{{ user.telefoonnummer | default(null) }}'><br>

        <label for="adress">Adres:</label>
        <input type="text" name="adress" value='{{ user.adress | default(null) }}'><br>

        <label for="postcode">Postcode:</label>
        <input type="text" name="postcode" value='{{ user.postcode | default(null) }}'><br> 

        <label for="woonplaats">Woonplaats:</label>
        <input type="text" name="woonplaats" value='{{ user.woonplaats | default(null) }}'><br>               

        <label for="motivatie">Motivatie:</label>
        <input type="text" name="motivatie" value='{{ user.motivatie | default(null) }}'><br>        
        
        <label for="cv">CV:</label>
        <input type="file" name="cv" value='{{ user.cv | default(null) }}'><br>        

        <label for="profielfoto">Profielfoto:</label>
        <input type="file" name="profielfoto" value='{{ user.profielfoto | default(null) }}'><br>        

        <input type="submit" name="btnSubmit" value="Opslaan">
{% endblock %}
